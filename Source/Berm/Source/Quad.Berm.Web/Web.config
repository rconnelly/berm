    </modules>
    <httpProtocol>
      <customHeaders>
        <!-- want to hide actual value of X-Powered-By -->
        <remove name="X-Powered-By" />
        <add name="X-Powered-By" value="PHP 5.2 Ubuntu" />
      </customHeaders>
    </httpProtocol>
