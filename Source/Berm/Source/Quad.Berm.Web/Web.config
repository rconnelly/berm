  <system.identityModel>
    <identityConfiguration>
      <claimsAuthenticationManager type="Quad.Berm.Mvc.Security.CustomClaimsAuthenticationManager, Quad.Berm.Mvc" />
      <claimsAuthorizationManager type="Quad.Berm.Mvc.Security.CustomClaimsAuthorizationManager, Quad.Berm.Mvc" />
      <securityTokenHandlers>
        <remove type="System.IdentityModel.Tokens.SessionSecurityTokenHandler, System.IdentityModel, Version=4.0.0.0, Culture=neutral, PublicKeyToken=b77a5c561934e089" />
