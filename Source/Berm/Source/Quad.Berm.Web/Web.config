  <common>
    <logging>
      <factoryAdapter type="Common.Logging.Log4Net.Log4NetLoggerFactoryAdapter, Common.Logging.Log4net1211">
        <arg key="configType" value="INLINE" />
      </factoryAdapter>
    </logging>
  </common>
  <log4net>
    <appender name="FileAppender" type="log4net.Appender.FileAppender">
      <file value="Logs\application.log" />
      <appendToFile value="false" />
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date %-5level %logger - %message%newline" />
      </layout>
    </appender>
    <appender name="TraceAppender" type="Quad.Berm.Common.Logging.LeveledTraceAppender, Quad.Berm.Common">
      <threshold value="INFO" />
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%utcdate{ISO8601} %5level: %message" />
      </layout>
    </appender>
    <root>
      <level value="ALL" />
      <appender-ref ref="FileAppender" />
    </root>
    <logger name="NHibernate" additivity="true">
      <level value="FATAL" />
    </logger>
    <logger name="NHibernate.SQL" additivity="true">
      <level value="DEBUG" />
    </logger>
    <logger name="NHibernate.Automapper" additivity="true">
      <level value="WARN" />
    </logger>
  </log4net>
