        <securityTokenHandlerConfiguration>
          <audienceUris>
            <add value="http://localhost:42000/" />
          </audienceUris>
          <certificateValidation certificateValidationMode="None" />
          <issuerNameRegistry type="System.IdentityModel.Tokens.ValidatingIssuerNameRegistry, System.IdentityModel.Tokens.ValidatingIssuerNameRegistry">
            <authority name="https://bermacs.accesscontrol.windows.net/">
              <keys>
                <add thumbprint="3353CAB2A4E779360C3CC25AFE038C676DBF0D2A" />
              </keys>
              <validIssuers>
                <add name="https://bermacs.accesscontrol.windows.net/" />
              </validIssuers>
